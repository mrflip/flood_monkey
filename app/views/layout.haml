%html{ "xml:lang" => "en", :lang => "en", "xmlns" => "http://www.w3.org/1999/xhtml", "xmlns:fb" => "http://www.facebook.com/2008/fbml" }
  %head
    %title= ['Streamweaver', @title].join('::')
    %link{ :href => "http://s1.infinitemonkeys.info/stylesheets/reset.css",       :rel => "stylesheet",    :type => "text/css" }
    %link{ :href => "http://s1.infinitemonkeys.info/stylesheets/application.css", :rel => "stylesheet",    :type => "text/css" }
    %link{ :href => "http://s1.infinitemonkeys.info/favicon.ico",                 :rel => "shortcut icon", :type => "image/x-icon" }

  %body
    #container
      != partial :_topbar
      #flash
        - [:success, :notice, :error].each do |flash_type|
          - if flash.has?(flash_type)
            %div{ :class => flash_type }
              = flash[flash_type]
      %br.clear
      
      != yield

      %br.clear
      = @dump

    -# %script{ :type => "text/javascript", :src => "http://ajax.googleapis.com/ajax/libs/jquery/1.3.2/jquery.min.js"    }
    -# %script{ :type => "text/javascript", :src => "/javascripts/application.js" }
    != @final_js  
